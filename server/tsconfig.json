{
  "compilerOptions": {
    "target": "ES2020", // The JavaScript version to compile to
    "module": "CommonJS", // Node.js uses CommonJS module system
    "rootDir": "./src", // Your source files directory
    "outDir": "./dist", // Directory for the compiled JavaScript files
    "strict": true, // Enable strict type-checking
    "esModuleInterop": true, // Enables import/export compatibility
    "skipLibCheck": true, // Skips type checks for dependencies
    "resolveJsonModule": true // Allows importing JSON files
  },
  "include": ["src/**/*"], // Include all .ts files in the src folder
  "exclude": ["node_modules", "dist"] // Exclude the node_modules and dist folders
}
